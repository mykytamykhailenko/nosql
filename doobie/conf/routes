# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET             /department                     com.aimprosoft.doobie.controllers.DoobieDepartmentController.readAll()
GET             /department/:id                 com.aimprosoft.doobie.controllers.DoobieDepartmentController.readById(id: Id)
GET             /department/:id/employee        com.aimprosoft.doobie.controllers.DoobieDepartmentController.getEmployeesByDepartmentId(id: Id)
POST            /department                     com.aimprosoft.doobie.controllers.DoobieDepartmentController.create()
PUT             /department                     com.aimprosoft.doobie.controllers.DoobieDepartmentController.update()
DELETE          /department/:id                 com.aimprosoft.doobie.controllers.DoobieDepartmentController.deleteById(id: Id)


GET             /employee                       com.aimprosoft.doobie.controllers.DoobieEmployeeController.readAll()
GET             /employee/:id                   com.aimprosoft.doobie.controllers.DoobieEmployeeController.readById(id: Id)
GET             /employee/:id/department        com.aimprosoft.doobie.controllers.DoobieEmployeeController.getEmployeeWithDepartmentById(id: Id)
POST            /employee                       com.aimprosoft.doobie.controllers.DoobieEmployeeController.create()
PUT             /employee                       com.aimprosoft.doobie.controllers.DoobieEmployeeController.update()
DELETE          /employee/:id                   com.aimprosoft.doobie.controllers.DoobieEmployeeController.deleteById(id: Id)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
