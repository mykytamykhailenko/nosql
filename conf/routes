# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET             /department                     com.aimprosoft.controllers.DepartmentController.readAll()
GET             /department/:id                 com.aimprosoft.controllers.DepartmentController.readById(id: Id)
GET             /department/:id/employee        com.aimprosoft.controllers.DepartmentController.getEmployeesByDepartmentId(id: Id)
POST            /department                     com.aimprosoft.controllers.DepartmentController.create()
PUT             /department                     com.aimprosoft.controllers.DepartmentController.update()
DELETE          /department/:id                 com.aimprosoft.controllers.DepartmentController.deleteById(id: Id)


GET             /employee                       com.aimprosoft.controllers.EmployeeController.readAll()
GET             /employee/:id                   com.aimprosoft.controllers.EmployeeController.readById(id: Id)
GET             /employee/:id/department        com.aimprosoft.controllers.EmployeeController.getEmployeeWithDepartmentById(id: Id)
POST            /employee                       com.aimprosoft.controllers.EmployeeController.create()
PUT             /employee                       com.aimprosoft.controllers.EmployeeController.update()
DELETE          /employee/:id                   com.aimprosoft.controllers.EmployeeController.deleteById(id: Id)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
